#
# Focaltech Touchscreen driver configuration
#

config TOUCHSCREEN_FOCALTECH_V3_MMI
	tristate "Moto Focaltech Touchscreen"
	depends on I2C
	default n
	help
	  Say Y here if you have Moto Focaltech touch panel.
	  If unsure, say N.

config INPUT_FOCALTECH_MMI_ENABLE_DOUBLE_TAP
	bool "Moto Focaltech Double tap"
	depends on TOUCHSCREEN_FOCALTECH_V2_MMI
	default n
	help
	  Say Y here to enable support for double tap functionality on Focaltech touch panel.
	  If unsure, say N.

config INPUT_FOCALTECH_MMI_IC_FT3519
	bool "Moto Focaltech FT3519"
	depends on TOUCHSCREEN_FOCALTECH_V3_MMI
        default n
        help
          Say Y here to enable support for FT3519 functionality on Focaltech touch panel.
          If unsure, say N.

config INPUT_FOCALTECH_MMI_IC_FT3518U
	bool "Moto Focaltech FT3518U"
	depends on TOUCHSCREEN_FOCALTECH_V3_MMI
        default n
        help
          Say Y here to enable support for FT3518U functionality on Focaltech touch panel.
          If unsure, say N.
